<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bishe.portal.dao.TbExamSelectDao">
    <resultMap id="TbExamSelectMap" type="com.bishe.portal.model.mo.TbExamSelect">
        <id column="id" property="id"/>
        <result column="subject_id" property="subjectId"/>
        <result column="exam_paper_num" property="examPaperNum"/>
        <result column="exam_tittle" property="examTittle"/>
        <result column="exam_answer" property="examAnswer"/>
        <result column="score" property="score"/>
        <result column="exam_parse" property="examParse"/>
        <result column="exam_middle_type" property="examMiddleType"/>
    </resultMap>

    <sql id="TableName">
        tb_exam_select
    </sql>

    <sql id="Fields">
        subject_id,exam_tittle,exam_answer,score,exam_parse,exam_middle_type
    </sql>

    <insert id="insertExamSelectInfo" parameterType="com.bishe.portal.model.mo.TbExamSelect">
        insert INTO <include refid="TableName"/> (
        <include refid="Fields"/>,
        create_at,
        update_at)
        values(
        #{tbExamSelect.subjectId},
        #{tbExamSelect.examTittle},
        #{tbExamSelect.examAnswer},
        #{tbExamSelect.score},
        #{tbExamSelect.examParse},
        #{tbExamSelect.examMiddleType},
        NOW(),
        NOW()
        )
        <selectKey resultType="int" keyProperty="id" order="AFTER">
            SELECT @@IDENTITY
        </selectKey>
    </insert>

    <select id="getExamSelectByNumbers" resultMap="TbExamSelectMap">
        select <include refid="Fields"/>
        from  <include refid="TableName"/>
        where subject_id in
        <foreach collection="subjectIdList" item="examPaperNum" open="(" close=")" separator=",">
            #{examPaperNum}
        </foreach>
    </select>

    <select id="getExamSelectBySubject" resultMap="TbExamSelectMap">
        select <include refid="Fields"/>
        from  <include refid="TableName"/>
        where subject_id = #{subjectId}
    </select>

    <select id="getAllSelectSubject" resultMap="TbExamSelectMap">
        select <include refid="Fields"/>
        from  <include refid="TableName"/>
        LIMIT #{startIndex},#{pageSize}
    </select>
</mapper>